<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
			"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="models.Student">
	<select id="selectStudent" parameterType="map" resultType="models.Student">
		select id, sname, age sage from student
		<where>
			<if test=" id != null">
				id = #{id}
			</if>
		</where>
	</select>
	<insert id="insertStudent" parameterType="models.Student">
		insert into student(id, sname, age)
		values 
			(#{id}, #{sname}, #{sage})
	</insert>
</mapper>